<!DOCTYPE html>
<html>
  <head>
    <title><%= @domain.name %> - Lidt nemmere studiestart</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Roboto" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= yield :head %>
  </head>
  <body>
    <div class="color-base">
      <div class="container">
        <header class="center">
          <h1><%= @domain.name %> (<%= current_user.name %>)</h1>
          <div><%= t("header.easier_study_start") %></div>
        </header>

        <%= render partial: 'partials/navigation' %>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-9 px-2">
            <div class="solid">
              <%= yield %>
            </div>
          </div>
          <div class="col-3">
            <% if @domain.secondary_menu.present? %>
              <nav class="nav justify-content-center dropdown">
                <% @domain.secondary_menu["items"].each do |item| %>
                  <div class="row">
                    <div class="col-12 mb-3 mt-0">
                      <div class="solid">
                        <%= item["name"] %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </nav>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <div class="row">
        <div class="col-4">
          <img src="http://rusling.dk/wp-content/uploads/2017/09/logo_stud1_rød_RGB-300x181.png" alt="" style="max-width: 100%; height: auto;" srcset="http://rusling.dk/wp-content/uploads/2017/09/logo_stud1_rød_RGB-300x181.png 300w, http://rusling.dk/wp-content/uploads/2017/09/logo_stud1_rød_RGB-768x465.png 768w, http://rusling.dk/wp-content/uploads/2017/09/logo_stud1_rød_RGB-700x423.png 700w, http://rusling.dk/wp-content/uploads/2017/09/logo_stud1_rød_RGB.png 848w" sizes="(max-width: 300px) 100vw, 300px">
        </div>
        <div class="col-4">
          <img src="http://rusling.dk/wp-content/uploads/2017/09/logo-mashup-1-300x111.png" alt="" style="max-width: 100%; height: auto;" srcset="http://rusling.dk/wp-content/uploads/2017/09/logo-mashup-1-300x111.png 300w, http://rusling.dk/wp-content/uploads/2017/09/logo-mashup-1-700x259.png 700w, http://rusling.dk/wp-content/uploads/2017/09/logo-mashup-1.png 731w" sizes="(max-width: 300px) 100vw, 300px">
        </div>
      </div>
      <%= yield :footer %>
    </footer>
    <%= yield :bottom %>
  </body>
</html>
